generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  name       String
  email      String      @unique
  password   String
  role       Role        @default(User)
  pengajuans Pengajuan[]
  struks     Struk[]
}

model Pengajuan {
  id          Int      @id @default(autoincrement())
  user_id     Int
  merk_laptop String
  seri_laptop String
  kota        String
  penjelasan  String
  createdat   DateTime @default(now())
  status      Status   @default(Menunggu)
  user        User     @relation(fields: [user_id], references: [id])
  struks      Struk[]
}

model Struk {
  id                       Int       @id @default(autoincrement())
  user_id                  Int
  pengajuan_id             Int
  penanggung_jawab_service String
  kebutuhan                Json
  total_biaya              String
  pengajuan                Pengajuan @relation(fields: [pengajuan_id], references: [id])
  user                     User      @relation(fields: [user_id], references: [id])
}

enum Role {
  User
  Admin
}

enum Status {
  Menunggu
  Diterima
  Ditolak
}
